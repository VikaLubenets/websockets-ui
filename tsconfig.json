{
    "compilerOptions": {
      "module": "Node16",
      "target": "ESNext",
      "esModuleInterop": true,
      "moduleResolution": "node16",
      "outDir": "./dist",
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }